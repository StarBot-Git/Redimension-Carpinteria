QMainWindow {
    background-color: #f5f5f5;
    color: #1f1f1f;
}

QToolBar {
    background-color: #dddddd;
    border-bottom: 1px solid #c0c0c0;
}

#central {
  background-color: #ffffff;
}

#TopBar {
  color: transparent;
}

#TopBarTitle {
  font-size: 18px;
  font-weight: 700;
  color: #000000;
}

#Breadcrumbs QLabel#Crumb {
  font-size: 13px;
  color: #374151; /* gris 700 */
}

#Breadcrumbs QLabel#CrumbSeparator {
  font-size: 13px;
  font-weight: 700;
  color: #374151; /* gris 400 */
}

#TopDivider {
  color: #E5E7EB; /* afecta QFrame HLine */
}

#ContentArea {
  background: #FFFFFF;
}

/* ---- Selection Panel ---- */
#SelectionPanel {
  background: #2a2a2a;         /* gris oscuro */
  border-radius: 12px;
}

#SelectionPanel QLabel#SelectionPanelTitle {
  color: #e5e7eb;
  font-weight: 600;
  font-size: 14px;
  padding: 4px 0 8px 0;
}

#SelectionPanel QLabel#SPLabel {
  color: #cbd5e1;
  font-size: 12px;
}

#SelectionPanel QComboBox#SPCombo {
  background: #323232;         /* a�n m�s oscuro para el input */
  color: #e5e7eb;
  border: 1px solid #374151;
  border-radius: 8px;
  min-height: 24px;            /* ↑ alto del control */
  padding: 6px 36px 6px 10px; 
}
#SelectionPanel QComboBox#SPCombo::drop-down { 
  width: 16px;
  subcontrol-origin: padding;
  subcontrol-position: top right;
  border-left: 1px solid #dae0e9; 
}
#SelectionPanel QComboBox#SPCombo:hover      { border-color: #4b5563; }
#SelectionPanel QComboBox#SPCombo:focus      { border: 2px solid #bebebe; }
#SelectionPanel QComboBox#SPCombo::down-arrow {
  /* puedes usar una imagen SVG, o dejar la nativa */
  width: 12px;
  height: 8px;
  margin-right: 8px;           /* centra la flecha dentro del drop-down */
}

/* Divisores */
#TopDivider  { color: #E5E7EB; }
#SideDivider { color: #E5E7EB; }

/* Content placeholder */
#ContentArea { background: #ffffff; border-radius: 12px; }


/* Card del editor */
#MetricsCard {
  background-color: #ffffff;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
}

#MetricsCardTitle {
  color: #000000;
  font-weight: 600;
  font-size: 16px;
}

/* Search minimal */
#SearchField {
  padding: 8px 10px;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
}

/* Tabla */
#MetricsTable {
  gridline-color: #e5e7eb;
  background: #ffffffff;
  color: #000000;
  alternate-background-color: #fafafa;
}

#MetricsTable::item:selected {
  background: #eef2ff;    /* selección suave */
  color: #111111;
}

/* Header */
QHeaderView::section {
  background: #f9fafb;
  padding: 6px 8px;
  color: #000000;
  border: 1px solid #e5e7eb;
  font-weight: 600;
}